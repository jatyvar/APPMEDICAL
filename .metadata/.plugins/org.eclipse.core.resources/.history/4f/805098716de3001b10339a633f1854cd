
public class Libro {
	private String titulo;
	private String autor;
	private int numEjemplares;
	private int ejemplaresPrestados;
	
	//Constructor
	public Libro(String titulo, String autor, int numEjemplares, int ejemplaresPrestados) {
		this.titulo = titulo;
		this.autor = autor;
		this.numEjemplares = numEjemplares;
		this.ejemplaresPrestados = ejemplaresPrestados;
	}
	
	
	//Metodos
	public boolean prestamos (int cantidad) {
		if (numEjemplares - ejemplaresPrestados >= cantidad) {
			numEjemplares -= cantidad;
			ejemplaresPrestados += cantidad; 
			return true;
		}else {
			return false;
		}
		
	}
	public boolean devolucion (int cantidad) {
		if (ejemplaresPrestados - cantidad >=0) {
			ejemplaresPrestados -= cantidad;
			numEjemplares += cantidad; 
			return true;
		}else {
			return false;
		}
	}

	@Override
	public String toString() {
		return "Libro [titulo=" + titulo + ", autor=" + autor + ", numEjemplares=" + numEjemplares
				+ ", ejemplaresPrestados=" + ejemplaresPrestados + "]";
	}
		
	
}
