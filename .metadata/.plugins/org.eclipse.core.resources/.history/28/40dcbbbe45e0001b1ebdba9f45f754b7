package Nomina;

public class Usuario {
	//Atributos
	private String nombre;
	private int identificacion;
	private String email;
	private byte edad;
	private String area;
	private boolean cargo;
	private double nomina;

	//Constructor
	public Usuario(String nombre, int identificacion, String email, byte edad, String area, boolean cargo) {
		this.nombre = nombre;
		this.identificacion = identificacion;
		this.email = email;
		this.edad = edad;
		this.area = area;
		this.cargo = cargo;
		//Obtener el salario
	}
	
	//Metodos
	public void info() {
		System.out.println("[Usuario]:"); 
		System.out.println("Nombre: "+nombre); 
	}
}


